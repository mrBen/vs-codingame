{
  "name": "vs-codingame",
  "displayName": "VS CodinGame",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vs-codingame.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vs-codingame.openCodingame",
        "title": "Open CodinGame"
      }
    ],
    "configuration": [
      {
        "title": "VS CodinGame",
        "properties": {
          "vs-codingame.useOneFileForAllPuzzles": {
            "type": "boolean",
            "default": false
          },
          "vs-codingame.autoPlay": {
            "type": "boolean",
            "default": false
          },
          "vs-codingame.enable2WayDataBinding": {
            "type": "boolean",
            "default": false
          },
          "vs-codingame.defaultFirstAction": {
            "type": "string",
            "default": "Download",
            "enum": [
              "Download",
              "Ask me",
              "Upload"
            ]
          }
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cgSynchro",
          "name": "CodinGame Synchronization"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "cgSynchro",
        "contents": "Please connect via the CodinGame IDE\n[Open CodinGame](command:vs-codingame.openCodingame)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}